<div class='container'>
	<h2>Library name: {{model.name}}</h2>
	<p class="individualLibraryViewText">Address: {{model.address}}</p>
	<p class="individualLibraryViewText">Tel: {{model.phone}}</p>
	{{#if model.website}}
		<a class="individualLibraryViewText" target="_blank" href="{{unbound model.website}}">Visit Website</a>
	{{else}}
		<p>No website details available</p>
	{{/if}}
	<div class="ember-cli-g-map">{{#g-map name="my-map" lat=model.lat lng=model.lng zoom=15 as |context|}}{{g-map-marker context lat=model.lat lng=model.lng}}{{/g-map}}</div>
</div>