<div class='container'>
  <div class="jumbotron text-center">
  	<h1>Contact Page</h1>

  	<br/><br/>

  	<p>Please send us a message!</p>

  	<div class="form-horizontal form-group form-group-lg row">
      <div class="col-xs-10 col-xs-offset-1 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
        {{input type="email" value=model.email class="form-control" placeholder="Please enter e-mail address."}}
      </div>

      <div class="col-xs-10 col-xs-offset-1 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
        {{textarea value=model.message class="form-control" placeholder="Please type your message."rows="7"}}
      </div>

      <div class="col-xs-10 col-xs-offset-1 col-sm-offset-1 col-sm-4 col-md-offset-2 col-md-3">
        {{#if model.isDisabled}}
        {{else}}
          <button class="btn btn-primary btn-lg btn-block" {{action 'saveMessage' model}}>Send message</button>
        {{/if}}
      </div>
    </div>

    {{#if responseMessage}}
      <div class="alert alert-success">{{responseMessage}}</div>
    {{/if}}

    <br/><br/>
  </div>
</div>