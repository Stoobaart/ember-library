<div class='container'>
  <h1>Invitations</h1>

  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>ID</th>
        <th>E-mail</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
    {{#each model as |invitation|}}
      <tr>
        <th>{{invitation.id}}</th>
        <td>{{invitation.email}}</td>
        <td><button class="btn btn-danger btn-xs col-xs-offset-2 col-sm-offset-3 col-md-offset-4" {{action 'deleteInvitation' invitation}}>Delete</button></td>
      </tr>
    {{/each}}
    </tbody>
  </table>
</div>